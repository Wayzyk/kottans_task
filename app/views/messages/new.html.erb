<div align="center">
<%= simple_form_for @message do |f| %>
  <%= f.label :text %>
  <%= f.text_area :text %>
  <%= f.input :secret_code %>
  <%= f.input :encryption_type, collection: [ "Destroy message after the N-count of  link visit", "Destroy after N hour"], selected: "Destroy message after the first link visit" %>
  <%= f.input :destruct_number, :label => "N-time" %>
  <%= f.button :submit %>
<% end %>
</div>
